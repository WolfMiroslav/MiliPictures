<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_call"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/round_call_24"
            android:drawableStart="@drawable/round_call_24"
            style="@style/ContactTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_email"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/round_email_24"
            android:drawableStart="@drawable/round_email_24"
            style="@style/ContactTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_web"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/round_web_24"
            android:drawableStart="@drawable/round_web_24"
            style="@style/ContactTextStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_value_phone_number"
            style="@style/ContactTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_value_email"
            android:textColor="@color/linksColor"
            style="@style/ContactTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_value_web"
            android:textColor="@color/linksColor"
            style="@style/ContactTextStyle" />
    </LinearLayout>
</LinearLayout>