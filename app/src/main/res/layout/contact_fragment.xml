<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/callTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_call"
        android:textStyle="bold"
        android:drawableStart="@drawable/round_call_24"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/callText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_value_phone_number"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@+id/callTitle" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/emailTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_email"
        android:textStyle="bold"
        android:drawableStart="@drawable/round_email_24"
        app:layout_constraintTop_toBottomOf="@+id/callTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_value_email"
        android:textColor="@color/linksColor"
        app:layout_constraintTop_toBottomOf="@id/callText"
        app:layout_constraintStart_toEndOf="@+id/emailTitle" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/facebookTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_facebook"
        android:textStyle="bold"
        android:drawableStart="@drawable/round_web_24"
        app:layout_constraintTop_toBottomOf="@+id/emailTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/facebookText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_value_facebook"
        android:textColor="@color/linksColor"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        app:layout_constraintStart_toEndOf="@+id/facebookTitle" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/webTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_web"
        android:textStyle="bold"
        android:drawableStart="@drawable/round_web_24"
        app:layout_constraintTop_toBottomOf="@+id/facebookTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/ContactTextStyle"
        android:id="@+id/webText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_value_web"
        android:textColor="@color/linksColor"
        app:layout_constraintTop_toBottomOf="@+id/facebookText"
        app:layout_constraintStart_toEndOf="@id/webTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
